{
  "ConnectionStrings": {
    "Mongo": "mongodb://localhost:27017/Quiz"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Shared.AspNet.Infrastructure.Logger.RenderedCompactJsonFormatter, Shared.AspNet.Infrastructure"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "ApplicationContext" ],
    "Properties": {
      "ApplicationContext": "Project"
    }
  },
  "IdentityUrl": "https://localhost:5002",
  "AllowedHosts": "*"
}